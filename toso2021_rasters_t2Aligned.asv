        flagged_time = time2plot(~nan_flags);
        
        % patch s.e.m.
        i1_xpatch = [flagged_time,fliplr(flagged_time)];
        i1_ypatch = [i1_mu(~nan_flags)-i1_sem(~nan_flags),...
            fliplr(i1_mu(~nan_flags)+i1_sem(~nan_flags))];
        patch_alpha = [i1_trials_throughtime(~nan_flags),...
            fliplr(i1_trials_throughtime(~nan_flags))];
        patch_alpha = (patch_alpha - min(i1_trials_throughtime)) / ...
            range(i1_trials_throughtime);
        patch_alpha = patch_alpha * .25 + .05;
        patch(sps(2),i1_xpatch,i1_ypatch,i1_clrs(ii,:),...
            'facevertexalphadata',patch_alpha',...
            'alphadatamapping','none',...
            'facealpha','interp',...
            'edgecolor','none');
        
        % patch average activity
        i1_xpatch = flagged_time(~nan_flags);
        i1_ypatch = i1_mu(~nan_flags);
        i1_ypatch(end) = nan;
        patch_alpha = i1_trials_throughtime(~nan_flags);
        patch_alpha = (patch_alpha - min(i1_trials_throughtime)) / ...
            range(i1_trials_throughtime);
        patch_alpha = patch_alpha * .95 + .05;
        patch(sps(2),i1_xpatch,i1_ypatch,0,...
            'facevertexalphadata',patch_alpha',...
            'alphadatamapping','none',...
            'edgealpha','interp',...
            'edgecolor',i1_clrs(ii,:),...
            'linewidth',1.5);
        
        % plot onset & offset
        plot(sps(2),time2plot(onset_flags),i1_mu(onset_flags),...
            'linewidth',1.5,...
            'marker','o',...
            'markersize',7.5,...
            'markerfacecolor','w',...
            'markeredgecolor',i1_clrs(ii,:));
        %         plot(sps(2),time2plot(offset_flags),i1_mu(offset_flags),...
        %             'linewidth',1.5,...
        %             'marker','o',...
        %             'markersize',7.5,...
        %             'markerfacecolor',i1_clrs(ii,:),...
        %             'markeredgecolor','w');
        
        % plot significance
        %         significance_mask = pvals(:,:,3)' < alpha;
        %         coeff_map = betas(:,:,3)';
        %         sign_neuron_idx = find(flagged_neurons == neurons2plot(nn));
        %         if ii == n_i && any(significance_mask(:,sign_neuron_idx))
        %             for gg = 1 : n_glm
        %                 if sign(coeff_map(gg,sign_neuron_idx)) > 0
        %                     clr = i1_clrs(end,:);
        %                 else
        %                     clr = i1_clrs(1,:);
        %                 end
        %                 if significance_mask(gg,sign_neuron_idx)
        %                     plot(sps(2),glm_time(gg)+[0,glm_step],[0,0],...
        %                         'color',clr,...
        %                         'linestyle','--',...
        %                         'linewidth',7.5);
        %                 end
        %             end
        %         end
        
        % compute mean spike density function
        i2_mu = nanmean(i2_spkrates(:,time_flags),1);
        i2_std = nanstd(i2_spkrates(:,time_flags),0,1);
        i2_trials_throughtime = sum(~isnan(i2_spkrates),1);
