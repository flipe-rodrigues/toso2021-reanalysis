            'facealpha',.75,...
            'edgecolor','none');
        xpatch = min(xlim(sps(3))) + [0,1,1,0] .* range(xlim(sps(1))) * .1/3;
        ypatch = [.5,.5,i2_n_trials+.5,i2_n_trials+.5] + i2_n_trial_counter;
        patch(sps(3+n_cols),xpatch,ypatch,i2_clrs(ii,:),...
            'linewidth',1.5,...
            'facealpha',.75,...
            'edgecolor','none');
        
        % update trial counters
        i1_n_trial_counter = i1_n_trial_counter + i1_n_trials;
        i2_n_trial_counter = i2_n_trial_counter + i2_n_trials;
        i1_boundaries(ii) = i1_n_trials;
        i2_boundaries(ii) = i2_n_trials;
    end
    
    % text annotations
    %     mean_formula = strjoin(repmat({'%.1f'},1,n_i),' | ');
    %     text(sps(3),.05,1.3,sprintf(['mean FR: ',mean_formula],...
    %         nanmean(mean_frs(neurons2plot(nn),:,:),2)),...
    %         'horizontalalignment','left',...
    %         'verticalalignment','top',...
    %         'units','normalized');
    %     trialcount_formula = strjoin(repmat({'%i'},1,n_i),' | ');
    %     text(sps(3),.05,1.2,sprintf(['min. trial counts: ',trialcount_formula],...
    %         min(trial_type_counts(neurons2plot(nn),:,:),[],2)),...
    %         'horizontalalignment','left',...
    %         'verticalalignment','top',...
    %         'units','normalized');
    %     text(sps(3),.05,1.1,sprintf('stability coeff.: %.2f',...
    %         stability_coeffs(neurons2plot(nn))),...
    %         'horizontalalignment','left',...
    %         'verticalalignment','top',...
    %         'units','normalized');
    %     text(sps(3),1,1.3,sprintf('trial count flag: %i',...
    %         trial_count_flags(neurons2plot(nn))),...
    %         'horizontalalignment','right',...
    %         'verticalalignment','top',...
    %         'units','normalized');
    %     text(sps(3),1,1.2,sprintf('FR flag: %i',...
    %         mean_fr_flags(neurons2plot(nn))),...
    %         'horizontalalignment','right',...
    %         'verticalalignment','top',...
    %         'units','normalized');
    %     text(sps(3),1,1.1,sprintf('stability flag: %i',...
    %         stability_flags(neurons2plot(nn))),...
    %         'horizontalalignment','right',...
    %         'verticalalignment','top',...
    %         'units','normalized');
    
    if all(isnan(t1_boundaries)) || ...
            all(isnan(i1_boundaries)) || ...
            all(isnan(i2_boundaries))
        continue;
    end
    
    % axes updates
    for ii = 1 : n_cols
        yylim = [1,nansum(t1_boundaries)]+[-1,1]*.5;
        yytick = unique([1;cumsum(t1_boundaries,'omitnan')]);
        yyticklabel = num2cell(yytick);
        yyticklabel(~ismember(yytick,yytick([1,end]))) = {''};
        set(sps(ii+n_cols),...
            'ylim',yylim,...
            'ytick',yytick,...
            'yticklabel',yyticklabel);
    end
    
    % update y-labels
    ylbl_4.Position = [ylbl_1.Position(1),ylbl_4.Position(2),ylbl_1.Position(3)];
    ylbl_5.Position = [ylbl_1.Position(1),ylbl_5.Position(2),ylbl_1.Position(3)];
    ylbl_6.Position = [ylbl_1.Position(1),ylbl_4.Position(2),ylbl_1.Position(3)];
    ylbl_5.Position(1) = ylbl_2.Position(1);
    ylbl_6.Position(1) = ylbl_3.Position(1);
    
    % axes linkage
    linkaxes(sps(1:n_cols));
    
    % update y-axis limits
    yylim = [min([ylim(sps(1)),ylim(sps(2)),ylim(sps(3))]),...
        max([ylim(sps(1)),ylim(sps(2)),ylim(sps(3))])];
    yylim = 5 * [floor(yylim(1)/5),floor(yylim(2)/5)];
    if ismember(neurons2plot(nn),[215])
        yylim = [0,65];
    elseif ismember(neurons2plot(nn),[462])
        yylim = [0,60];
    elseif ismember(neurons2plot(nn),[402])
        yylim = [0,50];
    elseif ismember(neurons2plot(nn),[381])
        yylim = [0,40];
    elseif ismember(neurons2plot(nn),[72])
        yylim = [0,15];
    end
    yylim = max(yylim,[0,1]);
    set(sps(1:n_cols),...
        'ylim',yylim,...+[-1,1]*.1*range(yylim),...
        'ytick',yylim,...
        'clipping','off');
    
    % save figure
    if want2save
        try
            % save settings
            png_file = fullfile(raster_path,[get(fig,'name'),'.png']);
            print(fig,png_file,'-dpng','-r300','-painters');
            svg_file = fullfile(panel_path,[fig.Name,'.svg']);
            print(fig,svg_file,'-dsvg','-painters');
            close(fig);
        catch
            close(fig);
        end
    else
        pause(1);
        close(fig);
    end
end
