        patch_alpha = (patch_alpha - min(i2_trials_throughtime)) / ...
            range(i2_trials_throughtime);
        patch_alpha = patch_alpha * .25 + .05;
        patch(sps(3),i2_xpatch,i2_ypatch,i2_clrs(ii,:),...
            'facevertexalphadata',patch_alpha',...
            'alphadatamapping','none',...
